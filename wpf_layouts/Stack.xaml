<Window x:Class="wpf_layouts.Stack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_layouts"
        mc:Ignorable="d"
        Title="Stack" Height="250" Width="500">

    <StackPanel Orientation="Vertical">
        <TextBlock VerticalAlignment="Center" Margin="0,15,20,0"><Run Text="Vorname"/><InlineUIContainer>
                <TextBox VerticalAlignment="Center" Width="100" Margin="10,20,0,0" HorizontalAlignment="Left"/>
        
            </InlineUIContainer></TextBlock>

        <TextBlock VerticalAlignment="Center" Margin="0,15,20,0"><Run Text="Nachname"/><InlineUIContainer>
                <TextBox VerticalAlignment="Center" Width="100" Margin="10,20,0,0" HorizontalAlignment="Left"/>
        
            </InlineUIContainer></TextBlock>

    </StackPanel>
</Window>
